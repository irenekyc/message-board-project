<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="icon" href="images/clipboard-regular.svg">
    <script src="https://kit.fontawesome.com/a1e74affc8.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro&display=swap" rel="stylesheet">
    <title>Irene's Message Board</title>
</head>
<body>
    <div class="web-container">
        <%- include ('./partials/header') %>
        <%-include ('./partials/write') %>
        <div class="messages-container">
            <% object.forEach(message => { %>
            <div class="message-card">
    <div class="profile-session">
        <i class="far fa-user"></i>
        <span class="user-name" id="user-name"> <%= message.username %> </span>
        <p class="create-Date" id="createdDate"> <%= message.createDate %></p>
    </div>
    <div class="message-session">
        <div class="categories">
            <span class="categories-bg <%= message.categories %>-bg" id="categories "> <%= message.categories %></span>
            
        </div>
        <div class="messageDetails">
        <p id="message"> <%= message.message %></p>
        </div>
    </div>
</div>
<% }); %>
          
</div>
        <div class="pagination-container">
            <a href="/filter?page=1"> Read All</a>
        </div>
            
            
        </div>
  <script src="js/index.js"></script>
</body>
</html>